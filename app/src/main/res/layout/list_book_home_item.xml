<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/CARD_VIEW"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:clickable="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
            android:id="@+id/bookHomeOutsideLayout"
                android:layout_height="130dp">
         <ImageView
             android:id="@+id/bookHomeOutsideImage"
             android:layout_width="120dp"
             android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/bookHomeOutsideTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:maxLines="2"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_weight="0.9" />

                    <ImageView
                        android:id="@+id/bookHomeOutsideMenuImage"
                        android:src="@drawable/ic_action_more_vert"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_weight="0.1"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/bookHomeOutsideAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Authors"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/bookHomeOutsideType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Category"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
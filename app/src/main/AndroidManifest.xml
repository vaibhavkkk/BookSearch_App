<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaibhav.booksearch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bookicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BookHomeActivity" />
        <activity android:name=".BookCategoryActivity" />
        <activity android:name=".BookHomeDetailsActivity" />
        <activity android:name=".BookCategoryDetailed" />
        <activity android:name=".WishListActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".Setting_Language" />
        <activity android:name=".Setting_Reminder" />
        <activity android:name=".Settings_Faq" />
        <activity android:name=".Setting_policy" />
        <activity android:name=".Setting_Term_of_use" />
        <activity android:name=".Setting_Rate" />
        <activity android:name=".Setting_Ads" />
        <activity android:name=".BookAuthorActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".BookReadWebView"></activity>
    </application>

</manifest>